{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": false,
    "target": "ES2015",
    "strict": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@rxjs/*": ["node_modules/rxjs"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**"]
}
