{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES2015",
    "allowJs": false,
    "moduleResolution": "node"
  },
  "paths": {
    "@rxjs/*": ["node_modules/rxjs"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**"]
}
